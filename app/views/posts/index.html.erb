
<div class="center_title">
  <h1>Emergencies reports</h1>
</div>

<div class="padding_left">
  <%= link_to 'New Emergency', new_post_path %>
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %> <br><br>

  <% @posts.each do |post| %>
      Subject: <%= post.subject %> <br>
      Time Posted: <%= post.created_at.strftime("%b %d, %Y %I:%M %p")%> <br>
      Reporter: <%= post.user.email %> <br>
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post_path(post),
         method: :delete,
         data: { confirm: 'Are you sure?' } %> <br>
         <br>
  <% end %>

  <br>
  <%= link_to 'New Emergency', new_post_path %>
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>

</div>
