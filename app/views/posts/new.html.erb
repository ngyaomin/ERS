<h1>Posts your emergencies here</h1>


<%= form_for :post do |f| %>
  <p>
    <%= f.label :subject %><br>
    <%= f.text_field :subject %>
  </p>

  <p>
    <%= f.label :categories %><br>
    <%= f.select :categories, ['Health', 'Natural Disaster', 'Terrorist']%>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>
